<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wrld"
    tools:context=".MainActivity">

    <!-- English Button -->
    <Button
        android:id="@+id/englishButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="English"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/spanishButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginTop="32dp"/>

    <!-- Spanish Button -->
    <Button
        android:id="@+id/spanishButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Spanish"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/englishButton"
        app:layout_constraintBottom_toTopOf="@+id/frenchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="16dp"/>

    <!-- French Button -->
    <Button
        android:id="@+id/frenchButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="French"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/spanishButton"
        app:layout_constraintBottom_toTopOf="@+id/lessonButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginTop="16dp"/>

    <!-- Start Lesson Button -->
    <Button
        android:id="@+id/lessonButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Lesson"
        style="@style/ButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/frenchButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
